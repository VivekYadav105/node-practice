    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Tasks Api
        link( rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer")
        style 
            include home.css
    body 
        //- include nav.pug
        .page-wrapper 
            .title-wrapper 
                h1#page-title Edit your task
            .tasks-wrapper
                .add-task
                    each task in tasks
                        form(method="post", action=`/task/edit/${task._id}`)
                            input#task-input(placeholder="Enter the name of task",required,name="taskName")
                            button.btn(type="submit")
                                i.fa-check.fa-2xl.fa-solid
                        .tasks
                            .task
                                p.task-name(style=`text-decoration:${task.isCompleted?"line-through":''}`)= task.name
