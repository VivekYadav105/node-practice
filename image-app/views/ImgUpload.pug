    include head.pug
    body.bg-secondary
        header
            include nav.pug
        .vw-100.bg-secondary.p-3
            .container-fluid.w-100.bg-dark.p-3.rounded
                .row.p-2.m-2
                    .col-12.col-md-10.m-auto.h-auto
