                                label(htmlFor="image").form-label.text-white Image Title
                                input(name="title",placeholder="enter the image title here", required)#image.p-2.rounded.text-danger.w-100
                            .form-group.d-flex.justify-content-around.align-items-center.my-3
                                label(htmlFor="MyImage").text-white Image 
                                input(type="file", name="MyImage").image.mx-3.p-2 
                                button(type="submit").btn-retro.success Upload 
